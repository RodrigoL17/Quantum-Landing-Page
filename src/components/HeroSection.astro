---
interface Props {
    coversStyles: string;
    sectionStyles: string;
}

const fadeAnimation = "animate-fade animate-duration-[1200ms] delay-300 animate-ease-in-out"
const shakeAnimation = "animate-shake animate-duration-[1500ms] animate-ease-linear animate-fill-both"

const {coversStyles, sectionStyles} = Astro.props
---

<section class={`text-white ${sectionStyles}`}>
    <article class="absolute flex flex-col items-center h-full w-full justify-around px-10">
        <p class={`uppercase text-[1.3rem] font-[600] sm:text-2xl ${fadeAnimation}`}>Belen Vitullo</p>
        <div class={`${fadeAnimation}`}>
            <h1 class="text-[3rem] sm:text-[4.5rem] uppercase leading-9 sm:leading-[3.5rem]"><span class="font-secondary text-[8rem] sm:text-[10rem]">Q</span>uantum</h1>
            <p class={`italic text-right mr-2 text-2xl sm:text-3xl leading-none ${shakeAnimation}`}>Mentoring 1:1</p>
        </div>
        <a class={`underline underline-offset-2 text-xl sm:text-2xl py-2 px-6 border-[#513016] border-2 bg-[#513016]/30 ${fadeAnimation}`} href="#learn-more">Learn more</a>
    </article>
    <img class={coversStyles} src="/1.png" alt="hero section cover">
</section>