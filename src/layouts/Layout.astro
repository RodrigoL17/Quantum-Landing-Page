---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-AR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favIconClarityCall32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Sesión de facilitación 1:1 para darle luz a nuestras sombras"/>
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="w-screen">
		<slot />
	</body>
</html>
<style is:global>

@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Puppies+Play&display=swap');
	*{
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	body {
		font-family: system-ui, sans-serif;
		background: #ae9490;	
	}

</style>
